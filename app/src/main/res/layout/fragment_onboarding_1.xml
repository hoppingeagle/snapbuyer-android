<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.hoppingeagle.snapbuyer.fragment_onboarding_1"
             android:background="#FF6200"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="40dp"
        android:text="Witaj w SnapBuyer"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="163dp"
        android:id="@+id/onboardingText0"
        android:layout_alignRight="@+id/onboardingArrowRight"
        android:layout_alignEnd="@+id/onboardingArrowRight"
        android:layout_alignLeft="@+id/onboardingArrowRight"
        android:layout_alignStart="@+id/onboardingArrowRight" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:gravity="center"
        android:text="Przesuń w prawo jak Ci się coś podoba"
        android:id="@+id/onboardingText1"
        android:layout_above="@+id/onboardingArrowRight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_right"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:id="@+id/onboardingArrowRight" />

</RelativeLayout>
